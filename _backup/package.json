{
  "name": "entra-token-client",
  "version": "1.0.0",
  "description": "Lightweight Entra token generator for app (client credential) and user (auth code) flows.",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"tsx watch src/server/index.ts\" \"vite\"",
    "build": "vite build && tsc -p tsconfig.json --noEmit",
    "start": "NODE_ENV=production tsx src/server/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@azure/msal-node": "^3.8.3",
    "dotenv": "^17.2.3",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.4"
  }
}
