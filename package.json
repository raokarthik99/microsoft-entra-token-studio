{
  "name": "microsoft-entra-token-studio",
  "private": true,
  "version": "0.1.0-alpha.1",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "vite dev",
    "start": "vite build && vite preview --port 5173",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "tauri": "tauri",
    "tauri:dev": "pnpm sidecar:build && tauri dev",
    "tauri:build": "tauri build",
    "tauri:icons": "node scripts/generate-tauri-icons.js",
    "tauri:signer": "tauri signer generate -w ~/.tauri/entra-token-studio.key",
    "sidecar:install": "cd sidecar && pnpm install",
    "sidecar:build": "cd sidecar && pnpm build",
    "version:sync": "node scripts/sync-version.js",
    "release": "node scripts/sync-version.js"
  },
  "devDependencies": {
    "@internationalized/date": "^3.10.0",
    "@lucide/svelte": "^0.544.0",
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.48.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.17",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^24.10.1",
    "bits-ui": "^2.14.4",
    "clsx": "^2.1.1",
    "svelte": "^5.43.8",
    "svelte-check": "^4.3.4",
    "svelte-sonner": "^1.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2"
  },
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@azure/keyvault-certificates": "^4.10.0",
    "@azure/keyvault-keys": "^4.10.0",
    "@azure/keyvault-secrets": "^4.10.0",
    "@azure/msal-browser": "^4.26.2",
    "@azure/msal-node": "^3.8.3",
    "@tauri-apps/plugin-opener": "^2.5.2",
    "idb-keyval": "^6.2.2",
    "jwt-decode": "^4.0.0",
    "mode-watcher": "^1.1.0"
  }
}